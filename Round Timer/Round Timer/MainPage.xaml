<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Round_Timer.MainPage">

    <StackLayout>
        <Label Text="Principal" FontSize="35" TextColor="Black" HorizontalOptions="CenterAndExpand"/>
        <Entry x:Name="txtPreTime" Placeholder="Preparation Time" Keyboard="Numeric"/>
        <Entry x:Name="txtRoundTime" Placeholder="Round Time" Keyboard="Numeric"/>
        <Entry x:Name="txtBreakTime" Placeholder="Break Time" Keyboard="Numeric"/>
        <Entry x:Name="txtRoundsNumber" Placeholder="Rounds Number" Keyboard="Numeric"/>
        <Button x:Name="btnStart" Text="Start!" HorizontalOptions="Center" VerticalOptions="Center" CornerRadius="40"/>
    </StackLayout>

</ContentPage>
